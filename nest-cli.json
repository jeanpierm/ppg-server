{
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoFileNameSuffix": [".dto.ts", ".schema.ts", ".entity.ts"]
        }
      }
    ]
  },
  "sourceRoot": "src"
}
